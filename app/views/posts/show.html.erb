<h1><%= @post.header %></h1>

<p><%= @post.content %></p>
<%= link_to "Edit", edit_post_path, :class => "btn btn-primary" %>
<%= link_to "Remove", post_path @post,
                      data: { :confirm => "Sure you want to delete?" },
                      :method => "delete",
                      :class => "btn btn-danger" %>
