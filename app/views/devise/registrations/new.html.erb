<h2>Sign up</h2>

<%= render '/layouts/errors', object: resource %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="form-group">
    <div class="col-md-6">
      <%= f.text_field :name, class: "form-control", placeholder: "Username" %>
    </div>
  </div><br><br><br>

  <div class="form-group">
    <div class="col-md-6">
      <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
    </div>
  </div><br><br>

  <div class="form-group">
    <div class="col-md-6">
      <%= f.text_field :password, class: "form-control", placeholder: "Password" %>
    </div>
  </div><br><br>

  <div class="form-group">
    <div class="col-md-6">
      <%= f.text_field :password_confirmation, class: "form-control", placeholder: "Password Confirmation" %>
    </div>
  </div><br><br>

  <div class="submit">
    <%= f.submit "Sign up", :class => "btn btn-primary" %>
  </div>
<% end %>
